{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://blab-2.gdsamrat.qzz.io/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
