<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <%- include('./partials/head') %>
    <%- include('./partials/styles') %>
    <title>Create account — Blogify</title>
  </head>
  <body>

    <%- include('./partials/navbar') %>

    <div class="container py-5">
      <div class="row justify-content-center align-items-start" style="min-height: 80vh;">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4 py-4">

          <!-- Logo -->
          <div class="text-center mb-4">
            <a href="/" class="text-decoration-none display-font fw-bold" style="font-size:2rem; color:#fff; letter-spacing:-0.03em;">
              Blogify<span style="color:var(--accent);">.</span>
            </a>
            <p class="text-secondary small mt-1 mb-0">Join thousands of writers today</p>
          </div>

          <!-- Card -->
          <div class="auth-card p-4 p-md-5">

            <h2 class="display-font fw-bold text-white mb-1" style="font-size:1.5rem;">Create account</h2>
            <p class="text-secondary small mb-4">Fill in the details below to get started.</p>

            <form class="needs-validation" action="/users/signup" method="post" enctype="multipart/form-data" novalidate>

              <!-- Full name -->
              <div class="mb-3">
                <label for="fullname" class="form-label text-secondary small fw-semibold text-uppercase mb-1" style="letter-spacing:0.07em;">
                  Full name
                </label>
                <div class="input-group input-group-dark">
                  <span class="input-group-text border-end-0 rounded-start-3" style="background:var(--bg-elevated); border-color:var(--bs-border-color);">
                    <i class="bi bi-person text-secondary"></i>
                  </span>
                  <input
                    type="text"
                    class="form-control form-control-dark border-start-0 rounded-end-3"
                    id="fullname"
                    name="fullname"
                    placeholder="Your full name"
                    required
                  />
                  <div class="invalid-feedback">Please enter your name.</div>
                </div>
              </div>

              <!-- Email -->
              <div class="mb-3">
                <label for="email" class="form-label text-secondary small fw-semibold text-uppercase mb-1" style="letter-spacing:0.07em;">
                  Email
                </label>
                <div class="input-group input-group-dark">
                  <span class="input-group-text border-end-0 rounded-start-3" style="background:var(--bg-elevated); border-color:var(--bs-border-color);">
                    <i class="bi bi-envelope text-secondary"></i>
                  </span>
                  <input
                    type="email"
                    class="form-control form-control-dark border-start-0 rounded-end-3"
                    id="email"
                    name="email"
                    placeholder="you@example.com"
                    required
                  />
                  <div class="invalid-feedback">Please enter a valid email.</div>
                </div>
              </div>

              <!-- Username -->
              <div class="mb-3">
                <label for="username" class="form-label text-secondary small fw-semibold text-uppercase mb-1" style="letter-spacing:0.07em;">
                  Username
                </label>
                <div class="input-group input-group-dark has-validation">
                  <span class="input-group-text border-end-0 rounded-start-3" style="background:var(--bg-elevated); border-color:var(--bs-border-color);">
                    <i class="bi bi-at text-secondary"></i>
                  </span>
                  <input
                    type="text"
                    class="form-control form-control-dark border-start-0 rounded-end-3"
                    id="username"
                    name="username"
                    placeholder="yourhandle"
                    required
                  />
                  <div class="invalid-feedback">Please choose a username.</div>
                </div>
              </div>

              <!-- Password -->
              <div class="mb-3">
                <label for="password" class="form-label text-secondary small fw-semibold text-uppercase mb-1" style="letter-spacing:0.07em;">
                  Password
                </label>
                <div class="input-group input-group-dark">
                  <span class="input-group-text border-end-0 rounded-start-3" style="background:var(--bg-elevated); border-color:var(--bs-border-color);">
                    <i class="bi bi-lock text-secondary"></i>
                  </span>
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control form-control-dark border-start-0 rounded-end-3"
                    placeholder="••••••••"
                    required
                  />
                  <div class="invalid-feedback">Password is required.</div>
                </div>
                <div class="form-text text-secondary opacity-75 mt-1">
                  8–20 characters including letters and numbers.
                </div>
              </div>

              <!-- Avatar upload -->
              <div class="mb-4">
                <label class="form-label text-secondary small fw-semibold text-uppercase mb-1" style="letter-spacing:0.07em;">
                  <i class="bi bi-image me-1"></i>Profile picture
                  <span class="ms-1 opacity-50">(optional)</span>
                </label>
                <input
                  class="form-control form-control-dark"
                  type="file"
                  id="cover"
                  name="avatar"
                  accept=".webp,.png"
                />
                <div class="form-text opacity-50">PNG or WebP only.</div>
              </div>

              <!-- Submit -->
              <div class="d-grid mb-3">
                <button class="btn btn-accent btn-lg rounded-3 fw-bold" type="submit">
                  <i class="bi bi-person-check me-2"></i>Create account
                </button>
              </div>

              <!-- Divider -->
              <div class="d-flex align-items-center gap-3 my-3">
                <hr class="flex-grow-1 opacity-10" />
                <span class="text-secondary small opacity-50">or</span>
                <hr class="flex-grow-1 opacity-10" />
              </div>

              <!-- Footer -->
              <p class="text-center text-secondary small mb-0">
                Already have an account?
                <a href="/users/signin" class="fw-semibold text-decoration-none" style="color:var(--accent);">
                  Sign in <i class="bi bi-arrow-right ms-1"></i>
                </a>
              </p>

            </form>
          </div>
          <!-- /Card -->

        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
